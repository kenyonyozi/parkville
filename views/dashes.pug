doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist copy/css/bootstrap.css')
  script(src='/bootstrap-5.1.3-dist/js/bootstrap.bundle.js')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  script(src='https://www.gstatic.com/charts/loader.js')
  link(rel='stylesheet' href='/dashs.css')
  link(rel='stylesheet' href='/theme.css')
  title ParkVille Dashboard
div
  .notify
    #data-button.table-data__tool-right
      button#add-button.btn.btn-success.button(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' data-bs-whatever='@fat')
        | + Add Client
      #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog
          #all.modal-content
            .modal-header
              h5#exampleModalLabel.modal-title
                | SERVICE REGISTRATION FORM
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form#regform.row.g-3(name='register' method='POST' action='/dash')
                .col-md-6
                  label.form-label(for='Name4') Name
                  input#inputName4.form-control(type='text' placeholder='Name' size='' onblur='' name='name' required='')
                .col-md-6
                  label.form-label(for='inputPhonenumber4') Phone Number
                  input#inputPhonenumber4.form-control(type='text' placeholder='phone number' size='' onblur='' name='phonenumber' required='')
                .col-md-6
                  label.form-label(for='inputninNumber') NIN Number
                  input#inputninNumber.form-control(type='text' placeholder='NIN Number' size='' onblur='' name='ninnumber' required='')
                .col-md-6
                  label.form-label(for='inputcolor') Color
                  input#inputcolor.form-control(type='text' placeholder='Color' size='' onblur='' name='color' required='')
                .col-md-6
                  label.form-label(for='inputnumberplate') Number Plate
                  input#inputnumberplate.form-control(type='text' placeholder='Number Plate' size='' onblur='' name='numberplate' required='')
                .col-md-6
                  label.form-label(for='inputModel') Model
                  input#inputModel.form-control(type='text' placeholder='Model' size='' onblur='' name='model' required='')
                .col-md-6
                  label.form-label(for='Date') Date
                  input#inputDate.form-control(type='date' size='' onblur='' name='date' required='')
                .col-md-6
                  label.form-label(for='inputtime') Time
                  input#inputtime.form-control(type='time' size='' onblur='' name='time' required='')
                .col-md-6
                  label.form-label(for='inputgender') Gender
                  select#inputgender.form-select(type='text' name='gender' size='' onblur='' required='')
                    option Male
                    option Female
                .col-md-6
                  label.form-label(for='inputservice') Service
                  select#inputgender.form-select(type='text' name='service' onblur='' required='')
                    option Parking
                    option Car Tyre
                    option Battery
                    option Nil
                .col-md-6
                  label.form-label(for='inputtypeofmodel') Description
                  select#inputgender.form-select(type='text' name='description' onblur='' required='')
                    option Personal Car
                    option Taxi
                    option Bodaboda
                    option Coaster
                    option Tyre Pressure
                    option Puncture Fixing
                    option Valves
                    option Battery Renting
                    option Nil
                .col-md-6
                  label.form-label(for='inputcolor') Duration
                  select#inputgender.form-select(type='text' name='duration' onblur='' required='')
                    option Day
                    option Night
                    option less than 3hrs
                .col-md-6
                  label.form-label(for='inputprice') Paid Price
                  select#inputgender.form-select(type='number' name='paidprice' onblur='' required='')
                    option 10000
                    option 5000
                    option 4000
                    option 3000
                    option 2000
                    option 1000
                    option 500
                    option 200
                    option Nil
                .col-md-6
                  label.form-label(for='inputrecipt') Battery Price
                  input#inputbatteryprice.form-control(type='text' size='' onblur='' name='batteryprice' required='')
                .col-md-6
                  label.form-label(for='inputbatterysize') Battery Size
                  input#inputbatterysize.form-control(type='text' size='' onblur='' name='batterysize' required='')
                .col-md-6
                  label.form-label(for='inputcartyreprice') Car Tyre Price
                  input#inputcartyreprice.form-control(type='text' size='' onblur='' name='cartyreprice' required='')
                .col-md-6
                  label.form-label(for='inputcartyresize') Car Tyre Size
                  input#inputcartyresize.form-control(type='text' size='' onblur='' name='cartyresize' required='')
                .col-md-6
                  label.form-label(for='inputcartyremake') Car Tyre Make
                  input#inputcartyremake.form-control(type='text' size='' onblur='' name='cartyremake' required='')
                .modal-footer
                  button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal')
                    | Close
                  button.btn.btn-outline-success(type='submit')
                    | Register
      .btn-group.dropdown
        button(type='button' data-bs-toggle='dropdown' aria-expanded='false')
          i.bi.bi-person(style='font-size: 45px; color: #2eb875;')
        ul#dropdown.dropdown-menu
          li
            a(href='/logout')
              button.log-out(type='button')
                i.bi.bi-box-arrow-right
                |  LogOut
  .logo-two
    | | ParkVille
  .welcome
    h4
      span
        i.bi.bi-person
      | Hello Moses,
    p Here is an over view of all ParkVille business activities
  .row
    .col-sm-6
      #card-one.card
        .card-body
          h5.card-title
            span All Account Value in UGX
            span
              i.bi.bi-eye-slash-fill
            | Hide Balance
          .card-text.money
            | 
            span
              img(src='/img/flag.jpeg' alt='' height='35px' width='35px' style='border-radius: 100%; margin-right:10px;')
    .col-sm-6
      #card-two.card
        .card-body
          h5.card-title ANALYTICS
          .card-text
            #myChart(style='width:50%; max-width:600px; height:0px;')
  hr(style='height:2px;border-width:0;color:#2eb875;background-color: #2eb875')
.container
  .table-responsive.table-responsive-data2
    div
      h4 Data table
    table.table.table-data2
      thead
        tr
          th Name
          th Number plate
          th Service
          th Duration
          th Description
          th Time
          th Date
          th Price
          th
      tbody
        if clients.length
        each client in clients 
         tr.tr-shadow
            td #{client.name}
            td #{client.numberplate}
            td #{client.service}
            td #{client.duration}
            td #{client.description}
            td #{client.time}
            td #{client.date}
            td #{client.paidprice}
            td
             .table-data-feature
               button.btn.item(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' data-bs-whatever='@fat')
                i.bi.bi-pencil-square(style='color:green;')
               #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                .modal-dialog
                  .modal-content
                    .modal-header
                      h5#exampleModalLabel.modal-title New message
                      button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                      form
                        .mb-3
                          label.col-form-label(for='recipient-name') Recipient:
                          input#recipient-name.form-control(type='text')
                        .mb-3
                          label.col-form-label(for='message-text') Message:
                          textarea#message-text.form-control
                    .modal-footer
                      button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
                      button.btn.btn-primary(type='button') Send message
               button.btn.item(type='button' data-bs-toggle='modal' data-bs-target='#exampleModaldelete')
                i.bi.bi-trash(style='color:red;')
               #exampleModaldelete.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                .modal-dialog
                  #delete-content.modal-content
                    .modal-header
                      h5#exampleModaldelete.modal-title Delete Client
                      button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    #body-delete.modal-body
                      | Are you sure you want to delete client
                    .modal-footer
                     form(method='get' action='/deleteuser/'+client._id)
                       console.log(#{client._id})
                       input(type="hidden" name="delete" value=client._id)
                       button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal') Cancel
                       button.btn.btn-danger(type='submit' name="delete") Delete
        else 
          p No registered clients yet              
script(src='/dashs.js')
script(src='registrationValidation.js')
