doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist copy/css/bootstrap.css')
  script(src='/bootstrap-5.1.3-dist/js/bootstrap.bundle.js')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  script(src='https://cdn.plot.ly/plotly-latest.min.js')
  link(rel='stylesheet' href='/dash.css')
  link(rel='stylesheet' href='/theme.css')
  title Document
div
  .notify
    span
      i.bi.bi-bell(style='font-size: 25px; color: #2eb875;')
  // the offcavas
  button.btn.btn-bg.left-button(type='button' data-bs-toggle='offcanvas' data-bs-target='#offcanvasExample' aria-controls='offcanvasExample')
    i.bi.bi-list(style='')
  #offcanvasExample.offcanvas.offcanvas-start(tabindex='-1' aria-labelledby='offcanvasExampleLabel')
    .offcanvas-header
      h5#offcanvasExampleLabel.offcanvas-title | ParkVille 
      button.btn-close.text-reset(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
    .offcanvas-body
      .sidenav
        .home
          span
            i.bi.bi-house
          a(href='') Home
        .user
          span
            i.bi.bi-person
          a(href='') User
        .user
          span
            i.bi.bi-tags
          a(href='') Prices
      hr
      //- .log-out
      //-   a(href='/signup')
      //-   button.btn.btn-success(type='button') Signup
        
      .log-out
        span
          i.bi.bi-box-arrow-right
        a(href='/logout') Log Out
  // the content
  div
    .welcome
      h4
        span
          i.bi.bi-person
        | Hello ,
      p Here is an over view of all ParkVille business activities
    // cards
    .row
      .col-sm-6
        #card-one.card
          .card-body
            h5.card-title
              span All Account Value in UGX
              span
                i.bi.bi-eye-slash-fill
                | Hide Balance
            .card-text.money
            if clients.length
            each client in clients
              span #{client.paidprice}
              span.fi.fi-gr
      .col-sm-6
        
        #myPlot.card(style='width:80%;max-width:700px')
          //
            <div class="card-body">
            <h5 class="card-title">Analytics</h5>
            <div class="card-text">
            <p>01.01.2021-01.012022 <span>Group by Daily Report</span> <span>UGX</span></p>
            </div>
            </div>
  hr
  // DATA TABLE
  div
    h3#table-head.title-5.m-b-35 Data table
    #data-button.table-data__tool-right
      // mode reg button
      button#add-button.btn.btn-success.button(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' data-bs-whatever='@fat')
        | + Add Client
      #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h5#exampleModalLabel.modal-title
                | Add Client
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              form.row.g-3(name='addClient' method='POST' action='/dash')
                .col-md-6
                  label.form-label(for='name4') Name
                  input#inputname4.form-control(type='text' name ='firstname' placeholder='Name')
                .col-md-6
                  label.form-label(for='inputPassword4') Phone Number
                  input#inputPhonenumber4.form-control(type='text' name='phonenumber' placeholder='Phonenumber')
                .col-12
                  label.form-label(for='inputNin') NIN number
                  input#inputNin.form-control(type='text' name='ninnumber' placeholder='NIN')
                .col-md-6
                  label.form-label(for='inputnumberplate') Number Plate
                  input#inputnumberplate.form-control(type='text' name='numberplate')
                .col-md-6
                  label.form-label(for='inputModel') Model
                  input#inputModel.form-control(type='text' name='model')
                .col-md-6
                  label.form-label(for='Date') Date
                  input#inputDate.form-control(type='date' name='date')
                .col-md-6
                  label.form-label(for='inputtime') Time
                  input#inputtime.form-control(type='time' name='time')
                .col-md-6
                  label.form-label(for='inputcolor') color
                  input#inputcolor.form-control(type='text' name='color')
                .col-md-4
                  label.form-label(for='inputgender') Gender
                  select#inputgender.form-select(type='text' name='gender')
                    option(selected='') Choose...
                    option Male
                    option Female
                .col-md-4
                  label.form-label(for='inputservice') Service
                  select#inputservice.form-select(type='text' name='service')
                    option(selected='') choose
                    option Parking
                    option Car Tyer
                    option Battery
                .col-md-4
                  label.form-label(for='inputtypeofmodel') description
                  select#inputdescription.form-select(type='text' name='description')
                    option(selected='') choose
                    option Personal car
                    option Taxi 
                    option Trucks
                    option Bodaboda
                    option Coaster
                    option Tyre Pressure 
                    option Puncture Fixing
                    option Valves
                    option Bttery Renting
                .col-md-4
                  label.form-label(for='inputcolor') Duration
                  select#inputduration.form-select(type='text' name='duration')
                    option(selected='') choose
                    option Day
                    option Night
                .col-md-4
                  label.form-label(for='inputprice') Paid Price UGX
                  select#inputprice.form-select(type='number' name='paidprice')
                    option(selected='') choose
                    option 10000
                    option  5000
                    option  3000
                    option  2000
                    option  1000
                    option  500
                .col-md-4
                  label.form-label(for='inputrecipt') battery price
                  input#inputrecipt.form-control(type='text' name='batteryprice')
                .col-md-2
                  label.form-label(for='inputrecipt') Receipt
                  input#inputrecipt.form-control(type='text' name='receipt')
                button.btn.btn-outline-secondary(type='button' data-bs-dismiss='modal')
                | Close
                button.btn.btn-outline-success(type='submit' value='Submit' name="") 
                | Register 
      .btn-group
        button#export-button.btn.btn-dark(type='button')
          i.bi.bi-file-earmark-arrow-down
          | Export
  // <h3 class="title-5 m-b-35" id="table-head">Data table</h3>
  #table-content.table-data__tool
    .table-data__tool-left
      // Example single danger button
      .btn-group
        button.btn.btn-light.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
          | All Properties
        ul.dropdown-menu
          li
            a.dropdown-item(href='#') Action
             
          li
