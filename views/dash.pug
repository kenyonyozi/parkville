          li
            hr.dropdown-divider
          li
            a.dropdown-item(href='#') Separated link
      .btn-group
        button.btn.btn-light.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
          | Today
        ul.dropdown-menu
          li
            a.dropdown-item(href='#') Action
          li
            a.dropdown-item(href='#') Another action
          li
            a.dropdown-item(href='#') Something else here
          li
            hr.dropdown-divider
          li
            a.dropdown-item(href='#') Separated link
  // table
  .container
    .table-responsive.table-responsive-data2
      table.table.table-data2
        thead
          tr
            th Name
            th Number plate
            th Service
            th Duration
            th Description
            th Price
            
        tbody
          if clients.length
          each client in clients 
           tr.tr-shadow
              td #{client.firstname}
              td #{client.numberplate}
                span.block-email
              td #{client.service}
              td #{client.duration}
              td #{client.description}
                span.status--process
              td #{client.paidprice}
              td 
                .table-data-feature
                  button.item(data-toggle='tooltip' data-placement='top' title='Send')
                    i.bi.bi-send
                  button.item(data-toggle='tooltip' data-placement='top' title='Edit')
                    i.bi.bi-pencil-square(style='color:green;')
                  button.item(data-toggle='tooltip' data-placement='top' title='Delete')
                    i.bi.bi-trash(style='color:red;')
                  button.item(data-toggle='tooltip' data-placement='top' title='More')
                    i.bi.bi-three-dots
          // stop
      // END DATA TABLE
script(src='/dash.js')
